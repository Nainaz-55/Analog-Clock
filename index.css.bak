#clockContainer{
	position:relative;
	margin: auto;
	
	height: 40vw;
	width: 40vw;
	background: url(clock.png) no-repeat;
	background-size: 100%;
}
#hour, #minute, #second{
	position: absolute;
	background: black;
	border-radius:10px;
	transform-origin: bottom;
}

#hour {
	width: 1.8%;
    height: 28%;
    top: 21%;
    left: 49%;
    opacity: 0.8;
	
}

#minute {
	width: 1.2%;
    height: 35%;
    top: 15%;
    left: 49%;
    opacity: 0.8;
}

#second {
	width: 0.9%;
    height: 36%;
    top: 13%;
    left: 49%;
    opacity: 0.8;
}

	